<div class="row d-flex mt-3">
    <div class="display-6 text-start col">Projects</div>
    <div class="text-end col">
        <button class="btn btn-success btn-sm"><i class="fa-solid fa-plus"></i> New</button>
    </div>
</div>

<hr />

<div class="row mt-5 d-flex" id="boards">

</div>

@section Scripts{

    <script>
        $(document).ready(() => {

            $.ajax({
                url: "/Board/Boards",
                type: "GET",
                dataType: "json",
                success: function (data) {
                    let strData = JSON.stringify(data);
                    console.log(strData);
                    let html = "";
                    $.each(data, (index, value) => {
                        html += `<div class='col d-inline-block'> 
                                      <a  href="/Status/Index/${value.id}" style="text-decoration-line:none;">
                                        <div class="col-2 text-center text-white">
                                            <div class="card bg-primary opacity-50">
                                                 <div class="card-body">
                                                     <div>${value.title}</div>
                                                  </div>
                                                </div>
                                        </div>
                                     </a>
                                 </div>
                                     `
                    });

                    $('#boards').html(html);
                }

            });

        });
    </script>

}

