@model KanbanBoard.Application.Dtos.IssueDtos.CreateIssueDto



<div class="row justify-content-center mt-5">
    <div class="col card">
        <div class="card-title display-6">Issue Creating</div>
        <hr />
        <div class="card-body">
            <form method="post" asp-action="Create">
                @*<input type="hidden" asp-for="StatusId" />*@
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label">Summary</label>
                        <input type="text" id="txtSummary" asp-for="Summary" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Description</label>
                        <textarea id="txtDescription" class="form-control form-control-sm" asp-for="Description" rows="6"></textarea>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label"> Priority</label>
                        <select asp-for="Priority" class="form-select">
                            <option value="0">Highest</option>
                            <option value="1">High</option>
                            <option value="2">Medium</option>
                            <option value="3">Lowest</option>
                            <option value="4">Low</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Issue Type</label>
                        <select asp-for="IssueType" id="txtIssueType" class="form-select">
                            <option value="0">Story</option>
                            <option value="1">Task</option>
                            <option value="2">Bug</option>
                        </select>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button class="btn btn-warning">Back</button>
                </div>
            </form>
        </div>
    </div>
</div>

